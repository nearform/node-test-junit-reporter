{
  "name": "test-junit-reporter",
  "version": "1.0.0",
  "description": "JUnit test reporter for the Node.js test runner",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node --test --test-reporter spec ./test/unit",
    "test:e2e": "./test/e2e/validate.sh && ./test/e2e/compare.sh",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/test-junit-reporter.git"
  },
  "keywords": ["test", "junit", "reporter"],
  "author": {
    "name": "Romulo Vitoi",
    "email": "romulo.vitoi@nearform.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nearform/test-junit-reporter/issues"
  },
  "homepage": "https://github.com/nearform/test-junit-reporter#readme",
  "dependencies": {
    "strip-ansi": "^7.0.1",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  }
}
